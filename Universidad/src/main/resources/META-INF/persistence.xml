<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="Universidad">
      <class>model.Estudiante</class>
      <class>model.Maestro</class>
      <!--Conexión a base de datos con PostgreSQL -->
      <properties>
          <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
          <!--Nombre de Base de datos -->
          <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Universidad"/>
          <property name="jakarta.persistence.jdbc.user" value="postgres"/>
          <property name="jakarta.persistence.jdbc.password" value="arelys123"/>

          <!--Configuración de Hibernate -->
          <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
          <property name="hibernate.show_sql" value="true"/>
          <property name="hibernate.hbm2ddl.auto" value="update"/>
          <property name="hibernate.format_sql" value="true"/>
      </properties>
  </persistence-unit>
</persistence>
